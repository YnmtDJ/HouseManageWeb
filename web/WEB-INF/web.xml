<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>hm_controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>hm_controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--二手房条件搜索-->
    <servlet>
        <servlet-name>FindSecHouse</servlet-name>
        <servlet-class>hm_controller.FindSecHouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindSecHouse</servlet-name>
        <url-pattern>/FindSecHouse</url-pattern>
    </servlet-mapping>

    <!--联系经纪人去看房-->
    <servlet>
        <servlet-name>SeeHouse</servlet-name>
        <servlet-class>hm_controller.SeeHouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeeHouse</servlet-name>
        <url-pattern>/SeeHouse</url-pattern>
    </servlet-mapping>

    <!--用户进行评论-->
    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>hm_controller.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/Comment</url-pattern>
    </servlet-mapping>

    <!--发布二手房-->
    <servlet>
        <servlet-name>PostSec</servlet-name>
        <servlet-class>hm_controller.PostSecServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostSec</servlet-name>
        <url-pattern>/PostSec</url-pattern>
    </servlet-mapping>

    <!--租房条件搜索-->
    <servlet>
        <servlet-name>FindRent</servlet-name>
        <servlet-class>hm_controller.FindRentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindRent</servlet-name>
        <url-pattern>/FindRent</url-pattern>
    </servlet-mapping>

    <!--发布二手房-->
    <servlet>
        <servlet-name>PostRent</servlet-name>
        <servlet-class>hm_controller.PostRentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostRent</servlet-name>
        <url-pattern>/PostRent</url-pattern>
    </servlet-mapping>

    <!--删除房源-->
    <servlet>
        <servlet-name>DeleteHouse</servlet-name>
        <servlet-class>hm_controller.DeleteHouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteHouse</servlet-name>
        <url-pattern>/DeleteHouse</url-pattern>
    </servlet-mapping>

    <!--编辑房源-->
    <servlet>
        <servlet-name>EditHouse</servlet-name>
        <servlet-class>hm_controller.EditHouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditHouse</servlet-name>
        <url-pattern>/EditHouse</url-pattern>
    </servlet-mapping>

    <!--退出登录-->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>hm_controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <!--在地图上显示小区二手房-->
    <servlet>
        <servlet-name>SecShowOnMap</servlet-name>
        <servlet-class>hm_controller.SecShowOnMapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecShowOnMap</servlet-name>
        <url-pattern>/SecShowOnMap</url-pattern>
    </servlet-mapping>

    <!--在地图上显示小区租房-->
    <servlet>
        <servlet-name>RentShowOnMap</servlet-name>
        <servlet-class>hm_controller.RentShowOnMapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RentShowOnMap</servlet-name>
        <url-pattern>/RentShowOnMap</url-pattern>
    </servlet-mapping>
</web-app>